@using Blism.Blazor
@using Blism.Core
@using Blism.Language.Yaml.Core

@code {

	[Parameter]
	public required ITokenizer<YamlTokenType> Tokenizer { get; set; } = YamlTokenizer.Instance;

	[Parameter]
	public required ITokenStyleMapper<YamlTokenType> StyleMapper { get; set; } = YamlStyleMapper.Instance;

	[Parameter, EditorRequired]
	public required ITheme Theme { get; set; }

	[Parameter, EditorRequired]
	public required string Code { get; set; }

	[Parameter]
	public string? Style { get; set; }

}

<SyntaxHighlighter Tokenizer="@Tokenizer" Theme="@Theme" StyleMapper="@StyleMapper" Code="@Code" Style="@Style"/>
