@using Blism.Blazor
@using Blism.Core
@using Blism.Language.CSharp.Core

@code {

	[Parameter]
	public required ITokenizer<CSharpTokenType> Tokenizer { get; set; } = CSharpTokenizer.Instance;

	[Parameter]
	public required ITokenStyleMapper<CSharpTokenType> StyleMapper { get; set; } = CSharpTokenStyleMapper.Instance;

	[Parameter, EditorRequired]
	public required ITheme Theme { get; set; }

	[Parameter, EditorRequired]
	public required string Code { get; set; }

	[Parameter]
	public string? Style { get; set; }

}

<SyntaxHighlighter Tokenizer="@Tokenizer" Theme="@Theme" StyleMapper="@StyleMapper" Code="@Code" Style="@Style"/>
