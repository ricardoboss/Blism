@using Blism.Blazor
@using Blism.Core
@using Blism.Language.Dart.Core

@code {

	[Parameter]
	public required ITokenizer<DartTokenType> Tokenizer { get; set; } = DartTokenizer.Instance;

	[Parameter]
	public required ITokenStyleMapper<DartTokenType> StyleMapper { get; set; } = DartTokenStyleMapper.Instance;

	[Parameter, EditorRequired]
	public required ITheme Theme { get; set; }

	[Parameter, EditorRequired]
	public required string Code { get; set; }

	[Parameter]
	public string? Style { get; set; }

}

<SyntaxHighlighter Tokenizer="@Tokenizer" Theme="@Theme" StyleMapper="@StyleMapper" Code="@Code" Style="@Style"/>
