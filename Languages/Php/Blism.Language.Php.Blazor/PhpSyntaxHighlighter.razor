@using Blism.Blazor
@using Blism.Core
@using Blism.Language.Php.Core

@code {

	[Parameter]
	public required ITokenizer<PhpTokenType> Tokenizer { get; set; } = PhpTokenizer.Instance;

	[Parameter]
	public required ITokenStyleMapper<PhpTokenType> StyleMapper { get; set; } = PhpTokenStyleMapper.Instance;

	[Parameter, EditorRequired]
	public required ITheme Theme { get; set; }

	[Parameter, EditorRequired]
	public required string Code { get; set; }

	[Parameter]
	public string? Style { get; set; }

}

<SyntaxHighlighter Tokenizer="@Tokenizer" Theme="@Theme" StyleMapper="@StyleMapper" Code="@Code" Style="@Style"/>
