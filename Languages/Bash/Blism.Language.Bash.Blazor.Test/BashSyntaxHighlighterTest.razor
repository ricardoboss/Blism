@inherits BunitContext

@code {
	[Test]
	public void TestHelloWorld() {
		const string source = "echo 'Hello, World!'";

		var theme = new TestTheme();

		var component = Render(@<BashSyntaxHighlighter Theme="@theme" Code="@source"/>);

		component.MarkupMatches(@<pre style="background:#1e1e1e;color:#d4d4d4;" diff:whitespace="RemoveWhitespaceNodes">
  <span style="color:#94dbfd;">echo</span>
  <span style=""></span>
  <span style="color:#cc884e;">'Hello, World!'</span>
</pre>);
	}

