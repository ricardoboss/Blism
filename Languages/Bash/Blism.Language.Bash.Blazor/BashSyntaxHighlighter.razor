@using Blism.Blazor
@using Blism.Core
@using Blism.Language.Bash.Core

@code {

	[Parameter]
	public required ITokenizer<BashTokenType> Tokenizer { get; set; } = BashTokenizer.Instance;

	[Parameter]
	public required ITokenStyleMapper<BashTokenType> StyleMapper { get; set; } = BashTokenStyleMapper.Instance;

	[Parameter, EditorRequired]
	public required ITheme Theme { get; set; }

	[Parameter, EditorRequired]
	public required string Code { get; set; }

	[Parameter]
	public string? Style { get; set; }

}

<SyntaxHighlighter Tokenizer="@Tokenizer" Theme="@Theme" StyleMapper="@StyleMapper" Code="@Code" Style="@Style"/>
